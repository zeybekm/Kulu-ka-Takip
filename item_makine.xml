            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#33FFEB3B"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="âš ï¸ Ã‡Ä±kÄ±ÅŸ yaklaÅŸÄ±yor!"
